<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutTablaAnioActual"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TableLayout
        android:layout_marginTop="30dp"
        android:id="@+id/tablaAnioActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        tools:ignore="VisualLintBounds">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_inverseOnSurface">

            <TextView
                android:id="@+id/textViewMes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Mes"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textViewCategoria1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="CategorÃ­a"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textViewValor1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Valor"
                android:gravity="center_horizontal"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
